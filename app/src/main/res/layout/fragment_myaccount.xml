<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/background_light">

    <RelativeLayout
        android:id="@+id/a1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/logo" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a1"
        android:id="@+id/a2">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="222dp"

            android:layout_height="88dp"
            android:fontFamily="cursive"
            android:layout_marginTop="64dp"
            android:text="Umbeo "
            android:textColor="#2616cb"
            android:textSize="42dp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:visibility="visible"

            app:layout_constraintHorizontal_bias="0.338"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/a4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a2"
        android:gravity="center"
       >

        <LinearLayout
            android:id="@+id/m1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See user profile                                      "
                android:textStyle="bold"/>

            <Button
                android:id="@+id/showprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Show user profile"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/m1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Want to update shopKeeper profile ? "
            android:textStyle="bold"/>

        <Button
            android:id="@+id/updatename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update User Name"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a4"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/mukul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Shop:  "
                android:textStyle="bold"/>

            <Button
                android:id="@+id/addshop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Shop"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/mukul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show All My Shop:  "
                android:textStyle="bold"/>

            <Button
                android:id="@+id/showshop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Shop"/>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>